<!ELEMENT cifp (alumne | professor)*>

<!ELEMENT alumne (
   nom,
   llinatges,
   data_naixement?,
   correu?,
   telefon?,
   adreca?,
   data_matricula,
   curs
)>

<!ELEMENT professor (
   nom,
   llinatges,
   data_naixement?,
   correu?,
   telefon?,
   adreca?,
   data_incorporacio,
   departament,
   assignatura*
)>

<!ELEMENT assignatura (
   nom_assignatura,
   data_inici?,
   data_final?
)>

<!ELEMENT nom (#PCDATA)>
<!ELEMENT llinatges (#PCDATA)>
<!ELEMENT data_naixement (#PCDATA)>
<!ELEMENT correu (#PCDATA)>
